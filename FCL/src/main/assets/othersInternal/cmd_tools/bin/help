#!/system/bin/sh
${fclshell_load_lang} help
if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  echo "${lang_help_help}"
elif [[ "$1" == "-v" || "$1" == "--version" ]]; then
  echo -n "${lang_help_version}"
  cat "${HOME}/files/version"
  echo ""
else
  echo "${lang_help_title}"
  echo ""
  ls "${FCLSHELL_WORKDIR}/bin"
  echo ""
  echo "${lang_help_content}"
fi
